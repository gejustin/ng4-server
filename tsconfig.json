{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./build",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "./src/server/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./build/aot",
        "skipMetadataEmit": true
    }
}